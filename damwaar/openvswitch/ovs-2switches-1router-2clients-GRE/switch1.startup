ip=$(which ip)
ovsvsctl=$(which ovs-vsctl)

/etc/init.d/openvswitch-switch start

$ip addr add 192.168.0.2/30 dev eth1

$ip link set eth0 up
$ip link set eth1 up

$ip route add 192.168.0.4/30 via 192.168.0.1

$ovsvsctl add-br br1
$ovsvsctl add-port br1 eth0
$ovsvsctl add-port br1 gre1 -- set interface gre1 type=gre options:remote_ip=192.168.0.6

